    "pub": "npm run build && npm publish --access public",
    "test": "latte --dom --progress=none -v",
    "check": "npx biome check",
    "start": "vite"
  },
  "pre-commit": [],
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@olton/esbuild-plugin-progress": "^0.3.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.4",
    "esbuild-plugin-replace": "^1.4.0",
    "shx": "^0.4.0",
    "vite": "^6.3.5",
    "@olton/latte": "^0.15.0"
  }
